
#include <iostream>
using namespace std;


int main() {
    
    
    int arr[]= {5,10,15,20};
    
    double sum=0;
    double avg;
    int m=sizeof(arr)/sizeof(arr[0]);
    
    for (int i=0; i<=m-1; i++){
        sum=sum+arr[i];
        }
    
   
   avg=sum/m;
   cout<<"avg of array is "<<avg;
    
    
    return 0;
}
